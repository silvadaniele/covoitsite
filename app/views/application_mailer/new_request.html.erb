<p><%= t(".greetings", name: @owner.first_name) %>,</p>

<p><%= t(".you_have_a_new_request_for") %> <strong><%= @request.number_of_passengers %></strong>
<%= t(".passenger", count: @request.number_of_passengers) %>, <%= t("defaults.from") %> <strong><%= @user.first_name %> <%= @user.last_name %></strong> <%= t(".about_your_ride") %> <%= t("defaults.from") %> <u><%= @ride.origin %></u> <%= t("defaults.to") %> <u><%= @ride.destination%></u></p>

<p><%= t(".more_information") %></p>

<ul>
  <li><%= Request.human_attribute_name(:number_of_passengers) %> : <%= @request.number_of_passengers %></li>
  <li><%= Request.human_attribute_name(:original_message) %> : <em><%= @request.original_message %></em></li>
</ul>
<br/>

<p><%= t(".if_you_want_to_answer") %></p>

<%= mail_to @user.email, t(".answer_to", name: @user.first_name), class: "btn btn-call-to-action" %>

<p><%= t(".you_can_also_call") %> <%= @user.first_name %> : <%= @user.phone_number %></p>
