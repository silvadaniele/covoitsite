<p id="notice"><%= notice %></p>

<h1>Rides</h1>

<table class="table">
  <thead>
    <tr>
      <th>Owner</th>
      <th>Origin</th>
      <th>Destination</th>
      <th>Departure at</th>
      <th>Capacity</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <div class="container">
    <tbody>
      <% @rides.each do |ride| %>
        <tr>
          <td><%= ride.owner.email %></td>
          <td><%= ride.origin %></td>
          <td><%= ride.destination %></td>
          <td><%= ride.departure_at.strftime("%d-%m-%Y") %></td>
          <td><%= ride.capacity %></td>
          <td><%= number_to_currency(ride.price, unit: "â‚¬", separator: ",", delimiter: ".", format: "%n %u") %></td>
          <td><%= link_to 'Show', ride %></td>
          <td><%= link_to 'Edit', edit_ride_path(ride) %></td>
          <td><%= link_to 'Destroy', ride, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </div>
</table>

