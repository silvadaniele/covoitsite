<p id="notice"><%= notice %></p>

<% content_for(:page_title) do %>
  <%= Ride.model_name.human(count: @rides.count) %>
<% end %>

<h1><%= @rides.count%> <%= Ride.model_name.human(count: @rides.count) %></h1>

<br />

<table class="table">
  <thead>
    <tr>
      <th><%= Ride.human_attribute_name(:owner) %></th>
      <th><%= Ride.human_attribute_name(:origin) %></th>
      <th><%= Ride.human_attribute_name(:destination) %></th>
      <th><%= Ride.human_attribute_name(:departure_at) %></th>
      <th><%= Ride.human_attribute_name(:capacity) %></th>
      <th><%= Ride.human_attribute_name(:price) %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <div class="container">
    <tbody>
      <% @rides.each do |ride| %>
        <tr>
          <td><%= ride.owner.first_name %> <%= ride.owner.last_name %></td>
          <td><%= ride.origin %></td>
          <td><%= ride.destination %></td>
          <td><%= ride.departure_at.strftime("%d/%m/%Y - %H:%M") %></td>
          <td><%= ride.capacity %></td>
          <td><%= number_to_currency(ride.price, unit: "â‚¬", separator: ",", delimiter: ".", format: "%n %u") %></td>
          <td><%= link_to t('.show'), ride %></td>
        </tr>
      <% end %>
    </tbody>
  </div>
</table>

<br>

<%= link_to t('defaults.new', resource: Ride.model_name.human), new_account_ride_path %>
