<p id="notice"><%= notice %></p>

<h1>Rides</h1>

<table>
  <thead>
    <tr>
      <th>Owner</th>
      <th>Origin</th>
      <th>Destination</th>
      <th>Departure at</th>
      <th>Capacity</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @rides.each do |ride| %>
      <tr>
        <td><%= ride.owner %></td>
        <td><%= ride.origin %></td>
        <td><%= ride.destination %></td>
        <td><%= ride.departure_at %></td>
        <td><%= ride.capacity %></td>
        <td><%= ride.price %></td>
        <td><%= link_to 'Show', ride %></td>
        <td><%= link_to 'Edit', edit_ride_path(ride) %></td>
        <td><%= link_to 'Destroy', ride, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Ride', new_ride_path %>
