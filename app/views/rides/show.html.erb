  <%= Ride.model_name.human %> :
  <%= @ride.origin %> -> <%= @ride.destination %>
<% end %>

<p id="notice"><%= notice %></p>

<p>
  <strong><%= Ride.human_attribute_name(:owner) %> :</strong>
  <%= @ride.owner.first_name %>
  <%= @ride.owner.last_name %>
</p>

<p>
  <strong><%= Ride.human_attribute_name(:origin) %> :</strong>
  <%= @ride.origin %>
</p>

<p>
  <strong><%= Ride.human_attribute_name(:destination) %> :</strong>
  <%= @ride.destination %>
</p>

<p>
  <strong><%= Ride.human_attribute_name(:departure_at) %> :</strong>
  <%= @ride.departure_at.strftime("%d/%m/%Y - %H:%M") %>
</p>

<p>
  <strong><%= Ride.human_attribute_name(:capacity) %> :</strong>
  <%= @ride.capacity %>
</p>

<p>
